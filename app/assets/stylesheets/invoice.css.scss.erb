.nht-fix-input{
  -webkit-appearance: none;
  background-color: #fff;
  border: 1px solid #adadad;
  border-radius: 1px;
  box-shadow: none;
  color: #303030;
  font-size: 1.4rem;
  font-weight: 400;
  height: auto;
  line-height: 1.36;
  padding: .6rem 1rem .6rem;
  transition: border-color .1s linear;
  vertical-align: baseline;
}

